{
	"compilerOptions": {
		"outDir": "dist",
		"incremental": true,
		"strict": true,
		"target": "es2023",
		"module": "es2022",
		"experimentalDecorators": true,
		"sourceMap": false,
		"moduleResolution": "Node",
		"removeComments": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"composite": true,
		"skipLibCheck": true,
		"jsx": "react",
		"jsxFactory": "tsx",
		"jsxFragmentFactory": "tsx",
		"paths": {
			"ui/*": ["./node_modules/@cxl/ui/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx"]
}
